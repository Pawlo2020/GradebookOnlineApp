@model GradebookOnlineApp.Models.SupervisorModels.SupervisorProfile

@{
    ViewBag.Title = "EditSubject";
    Layout = "~/Views/Supervisor/SupLayout.cshtml";
}

<h2>EditSubject</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>przedmioty</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(x => x.Subject.id_przed)

        <div class="form-group">
            @Html.LabelFor(x => x.Subject.id_prow, "id_prow", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(x => x.Subject.id_prow, (IEnumerable<SelectListItem>)ViewBag.TeacherList)
                @Html.ValidationMessageFor(x => x.Subject.id_prow, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Subject.nazwa_przed, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(x => x.Subject.nazwa_przed, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.Subject.nazwa_przed, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Subjects")
</div>
